<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="none" />
    <title>@ViewBag.Title</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/adminLTE/dist/css/adminlte.css" rel="stylesheet" />
    <link href="~/lib/bs4-toast-snackbar/css/toast-snackbar.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/bs4-autocomplete/css/bs4-autocomplete.css" rel="stylesheet" />

    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/summernote/summernote.min.css" rel="stylesheet" />
    @RenderSection("head", false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <partial name="_HeaderBar" />

        <vc:main-nav-bar></vc:main-nav-bar>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content p-4">

                <partial name="_Noti" />

                <!-- Default box -->
                @if (ViewBag.FullScreen == true)
                {
                    @RenderBody()
                }
                else
                {
                    <div class="card">
                        <div class="card-header">
                            <h3 class="h3">@ViewBag.Title</h3>
                        </div>
                        <div class="card-body">
                            @RenderBody()
                        </div>
                        <!-- /.card-body -->
                    </div>
                }
                <!-- /.card -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>
    @*<partial name="_ChangePassword" model="null" />*@
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Thư viện toast-->
    <script src="~/lib/bs4-toast-snackbar/js/toast-snackbar.js"></script>
    <!-- AdminLTE App -->
    <script src="/adminLTE/dist/js/adminlte.min.js"></script>
    <!-- Validation -->
    <partial name="_ValidationScriptsPartial" />

    <!-- Thư viện autocomplete -->
    <script src="~/lib/bs4-autocomplete/js/bs4-autocomplete.js" asp-append-version="true"></script>

    @*Thư viện summernote*@
    <script src="~/lib/summernote/summernote.min.js"></script>
    <!-- Javascript dùng chung -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", false)
</body>
</html>

