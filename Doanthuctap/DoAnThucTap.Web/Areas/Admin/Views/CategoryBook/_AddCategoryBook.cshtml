                </div>
                <div class="form-group">
                    <label asp-for="CategoryBookName" class="control-label">Thể loại sách</label>
                    <input asp-for="CategoryBookName" class="form-control" />
                    <span asp-validation-for="CategoryBookName" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>


