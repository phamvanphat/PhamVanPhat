@model DoAnThucTap.Web.Areas.Admin.ViewModels.CategoryBook.AddorUpdateCategoryBook

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="_AddCategoryBook">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control id-category" />
